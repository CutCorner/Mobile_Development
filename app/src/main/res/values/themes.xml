    <style name="logo_onboarding">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/pink</item>
        <item name="strokeWidth">0.4dp</item>
        <item name="cardBackgroundColor">@color/gray3</item>
    </style>

    <style name="MyCardView2" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/brown</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="backgroundTop">
        <item name="android:tint">@color/brown</item>
    </style>

    <style name="fontSearchBar">
        <item name="android:fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomIndicator">
        <item name="android:color">@color/brown</item>
    </style>

    <style name="TopBar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <!-- TextAppearance style for Toolbar Title -->
    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/montserrat_bold</item> <!-- Font resource -->
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item> <!-- Optional: Customize text size -->
        <item name="android:textColor">@android:color/black</item> <!-- Optional: Customize text color -->
    </style>

    <style name="bottom_sheet">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--  For Bottom Sheet  -->
    <style name="BottomsheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BottomsheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomsheetStyle</item>
    </style>

    <!--  For Bottom Navigation  -->
    <style name="MyActiveBottomNavigation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyInactiveBottomNavigation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">11sp</item>
    </style>


</resources>

