<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.barbershop.ChangeModelActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/IBBack"
                style="@style/ForwardImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:padding="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:theme="@android:style/ThemeOverlay.Material.Dark"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/edit_model"
                android:textSize="20sp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/PBLoad"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                android:background="@drawable/bg_lottie"
                app:lottie_fileName="logo_test.json"
                app:lottie_loop="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CIVProfileUser"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo_placeholder"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/IBEditPhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/edit_photo_profile"
                android:padding="10dp"
                android:background="@drawable/default_unselected_dot"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@+id/CIVProfileUser"
                app:layout_constraintEnd_toEndOf="@+id/CIVProfileUser" />

            <TextView
                android:id="@+id/TVModelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/model_name"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IBEditPhoto" />

            <com.example.cepstun.cv.CustomEditText
                android:id="@+id/ETModelName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:autofillHints="name"
                android:background="@drawable/bg_et"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:hint="@string/hint_model_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/TVModelName"
                app:layout_constraintTop_toBottomOf="@+id/TVModelName" />

            <TextView
                android:id="@+id/TVTittlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/price"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETModelName" />

            <com.example.cepstun.cv.CustomEditText
                android:id="@+id/ETSize"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bg_et"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:hint="@string/hint_price"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="25"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/TVTittlePrice"
                app:layout_constraintTop_toBottomOf="@+id/TVTittlePrice" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BSaveChanges"
                android:layout_width="355dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_login"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/button_save_changes"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETSize" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
