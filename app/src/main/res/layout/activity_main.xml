<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/backgroundViewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/PBLoad"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/LottieAV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_lottie"
            app:lottie_autoPlay="true"
            app:lottie_fileName="logo_test.json"
            app:lottie_loop="true" />

        <TextView
            style="@style/TVLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LottieAV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/loading" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/FLContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/BNMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BNMenu"
        style="@style/NavBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="10dp"
        app:elevation="10dp"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/MyActiveBottomNavigation"
        app:itemTextAppearanceInactive="@style/MyInactiveBottomNavigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu_placeholder" />


</androidx.constraintlayout.widget.ConstraintLayout>