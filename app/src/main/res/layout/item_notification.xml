<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/IBDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete_notification_button"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVSatatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="19sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pesanan selesai" />

    <TextView
        android:id="@+id/TVBarberName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/TVSatatus"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/TVSatatus"
        app:layout_constraintTop_toBottomOf="@+id/TVSatatus"
        tools:text="Barbername" />

    <TextView
        android:id="@+id/TVModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="@+id/TVBarberName"
        app:layout_constraintStart_toStartOf="@+id/TVBarberName"
        app:layout_constraintTop_toBottomOf="@+id/TVBarberName"
        tools:text="model" />

    <TextView
        android:id="@+id/TVAddon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="@+id/TVBarberName"
        app:layout_constraintStart_toStartOf="@+id/TVBarberName"
        app:layout_constraintTop_toBottomOf="@+id/TVModel"
        tools:text="addOn" />

    <TextView
        android:id="@+id/TVReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="@+id/TVBarberName"
        app:layout_constraintStart_toStartOf="@+id/TVBarberName"
        app:layout_constraintTop_toBottomOf="@+id/TVAddon"
        tools:text="reason" />


    <TextView
        android:id="@+id/TVDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/TVBarberName"
        app:layout_constraintStart_toStartOf="@+id/TVBarberName"
        app:layout_constraintTop_toBottomOf="@+id/TVReason"
        tools:text="12/12/2022" />


</androidx.constraintlayout.widget.ConstraintLayout>